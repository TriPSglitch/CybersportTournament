<Window x:Class="CybersportTournament.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CybersportTournament"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TabControl BorderThickness="0">
            <TabItem Header="Главная" Height="20" Width="100" Background="#FF4F5856">
                <Grid Margin="-3,-22,-3,-2"/>
            </TabItem>
            <TabItem Name="AddItem" Header="Добавить" Height="20" Width="100" Background="#FF4F5856">
                <Grid Margin="-3,-22,-3,-2">
                    <Button Name="AddTeam"  Content="Команду" HorizontalAlignment="Left" Margin="158,156,0,0" VerticalAlignment="Top" Height="70" Width="177" Click="AddTeamClick" FontSize="36"/>
                    <Button Name="AddPlayer"  Content="Игрока" HorizontalAlignment="Left" Margin="158,248,0,0" VerticalAlignment="Top" Height="70" Width="177" FontSize="36" Click="AddPlayerClick"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
